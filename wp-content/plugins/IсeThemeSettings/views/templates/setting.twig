<div id="message" class="updated">
    <p><strong></strong></p>
</div>
    <table width="600" border="0">
        <tr>
            <td> Лого фирмы: </td>
            <td>
                <img class="header_logo" src="{{ theme_options.header_logo }}" height="100" width="100"/>
            </td>
            <td>
                <input type="hidden" class="header_logo_url" name="ice-theme-settings[header_logo]" size="60" value="{{ theme_options.header_logo }}"
                alt="logo image" title="logo image">
                <a href="#" class="header_logo_upload">Upload</a>
                <a href="#" class="header_logo_reset">Reset</a>
            </td>
        </tr>
        <tr>
            <td>Телефоны фирмы:</td>
            <td>
                <input type="text" name="ice-theme-settings[phones][]" value ="{{theme_options.phones|first}}"/>
                <button class="add_field_button_phone">Add More Fields</button>
                <div class="input_fields_wrap_phone">
                    {% if theme_options.phones|length > 1 %}
                        {% for phone in theme_options.phones %}
                            {% if not loop.first %}
                                <div><input type="text" name="ice-theme-settings[phones][]" value="{{phone}}"/><a href="#" class="remove_field">Remove</a></div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Применить" /></td>
        </tr>
    </table>