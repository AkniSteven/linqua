<div class="container">
	{#{% if categories is not empty %}#}
		{#{% for category in categories %}#}
			{#{% if category.count > 0 %}#}
				{#{{ category.name }} {{ category.slug }}#}
			{#{% endif %}#}
		{#{% endfor %}#}
	{#{% endif %}#}

	<div :class="currentClass">
		<div class="swiper-container">
			<div class="switch lp-community__filter-list swiper-wrapper">
				{% if categories is not empty %}
					{% for category in categories %}
						{% if category.count > 0 %}
							<a href="#" class="lp-community__filter-item swiper-slide">
								<input name="radio" id="{{ category.id }}"
									   type="radio" value="{{ category.value }}"
									   v-model="status" {{ category.checked }}>
								<label for="{{ category.id }}">{{ category.name }}</label>
							</a>
						{% endif %}
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>
	
	<div class="list-content lp-article__holder" id="article-list" :class="currentStyle">
		<list v-for="list in channelRes | status" :list="list" track-by="$index" transition="expand"></list>
	</div>
	<!-- end of top-content -->
	
	<!-- template -->
	<template id="list-header">
	
	</template>
	
	<template id="list-template">
		<div class="lp-article__tile high party item">
			<a href="#" class="article-tile__link">
				<div class="article-tile__img"
					 style="background-image: url('http://www.sunhome.ru/UsersGallery/Cards/prazdnik_den_zemli_kartinka.jpg')">
				</div>
				<div class="article-tile__description item">
					{% if tile.tileBig is defined and tile.tileBig == true %}
						<span class="tile-description__btn btn grey">18 ОКТЯБРЯ</span>
						<h4 class="tile-description__title">Кино-клуб</h4>
					{% endif %}
					<span class="tile-description__subtitle">
						${ list.name }
					</span>
				</div>
			</a>
		</div>
	</template>
	<!-- end of template -->
</div>
