	<div class="container button-group filters-button-group swiper-wrapper">
		{% if categories is not empty %}
			{% for category in categories %}
				{% if category.count > 0 %}
					<div class="lp-community__filter-item swiper-slide btn button is-checked"
							data-filter="{{ category.dataFilter }}">
						{{ category.filterBtnTxt }}
					</div>
				{% endif %}
			{% endfor %}
		{% endif %}
	</div>
</div>
<!-- END ISOTOPE FILTER TABS--------------->


