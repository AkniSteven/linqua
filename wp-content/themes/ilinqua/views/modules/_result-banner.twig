<div class="language-banner desktop-banner"
     style="background-image: url('{{ theme.path }}/public/images/result-banner.png'); background-color: {{ color }}"
     {#{% if background_image_url !='' %}#}
         {#style="background-image: url('{{ background_image_url }}'); background-color: {{ color }}"#}
     {#{% else %}#}
         {#style="background-image: url('{{ theme.path }}/public/images/img_En.svg'); background-color: {{ color }}"#}
     {#{% endif %}#}
>
    <h1 class="language-banner__title">
        {% if page.post_content != "" %}
            {{ page.post_content }}
        {% endif %}
    </h1>
</div>

{#Mobile banner#}
<div class="language-banner mobile-banner"
     {% if background_image_url !='' %}
         style="background-image: url('{{ background_image_url }}'); background-color: {{ color }}"
     {% else %}
         style="background-image: url('{{ theme.path }}/public/images/img_En.svg'); background-color: {{ color }}"
     {% endif %}
>
    <h1 class="language-banner__title">
        {% if page.post_content != "" %}
            {{ page.post_content }}МОБИЛА ОГОНЬ
        {% endif %}
    </h1>
</div>
