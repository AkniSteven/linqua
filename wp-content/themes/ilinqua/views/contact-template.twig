{% extends '_layout.twig' %}

{% block title %}
    {{ page.post_title }}
{% endblock %}

{% block jsEntryPoint %}

{% endblock %}

{% block body_attributes %}
    class="contact-page"
{% endblock %}

{% block scripts %}
    <script src="{{ theme.path }}/public/js/contact-template.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <span
            data-lat = "{{ page.acf.contact_map.value.lat }}"
            data-lng = "{{ page.acf.contact_map.value.lng }}"
            id="coordinates"
    ></span>
    <div class="contacts">
        <div class="contacts__map" id="map"></div>
        <div class="contacts__place">
            <h1>
                {% if page.acf.city.value != '' %}
                    <span class="city">{{ page.acf.city.value }}</span>
                {% endif %}
                {% if page.acf.street.value != '' %}
                    <span class="street">{{ page.acf.street.value }}</span>
                {% endif %}
            </h1>
        </div>
        {% if theme_options is not empty %}
            <div class="contacts__work">
                <?xml version="1.0" encoding="utf-8"?>
                <!-- Generator: Adobe Illustrator 19.2.0, SVG Export Plug-In . SVG Version: 6.00 Build 0)  -->
                <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                     viewBox="0 0 34 34" style="enable-background:new 0 0 34 34;" xml:space="preserve">
<style type="text/css">
    .st0{fill-rule:evenodd;clip-rule:evenodd;fill:#FFFFFF;}
</style>
                    <g>
                        <rect x="18.899" y="5.101" transform="matrix(0.7071 -0.7071 0.7071 0.7071 2.8579 21.1006)" class="st0" width="16" height="4"/>
            
                        <rect x="-0.899" y="24.899" transform="matrix(0.7071 -0.7071 0.7071 0.7071 -16.9411 12.8995)" class="st0" width="16" height="4"/>
            
                        <rect x="24.899" y="18.899" transform="matrix(0.7071 -0.7071 0.7071 0.7071 -11.1421 26.8995)" class="st0" width="4" height="16"/>
                        <rect x="5.101" y="-0.899" transform="matrix(0.7071 -0.7071 0.7071 0.7071 -2.9411 7.1005)" class="st0" width="4" height="16"/>
                    </g>
</svg>
    
                {% if theme_options.phones is not empty %}
                    <div class="phones">
                        <ul>
                            {% for phone in theme_options.phones %}
                                <li>
                                    <a href="tel:{{ phone }}">{{ phone }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                {% if theme_options.work is not empty %}
                <div class="time">
                    {{ theme_options.work }}
                </div>
                {% endif %}
                <div class="link">
                    {% if page.post_content is not empty %}
                        {{ page.post_content }}
                    {% endif %}
                    {% if theme_options.social is not empty %}
                        <div class="soc-net">
                            <ul class="soc-net__list">
                                {% for name,href in theme_options.social %}
                                    {% if href != '' %}
                                        <li>
                                            <a href="{{ href }}">
                                                <img src="{{ theme.path }}/public/images/{{ name }}.svg" alt="{{ name }}">
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}